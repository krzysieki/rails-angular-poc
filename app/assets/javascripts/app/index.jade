doctype html
html(lang="pl-PL", ng-app="app")
  head
    meta(charset='utf-8' )
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(http-equiv="content-language", content="pl-PL")
    meta(name="viewport", content="width=device-width, user-scalable=no")
    meta(name="keywords", content="")
    meta(name="description", content="")
    meta(name="author", content="")
    meta(name="apple-mobile-web-app-capable", content="yes")

    title lang

    link(rel="apple-touch-icon", href="favicon.ico")
    link(rel="shortcut icon", href="favicon.ico")
    link(rel='shortcut icon', type='image/x-icon', href='favicon.ico')

    //build:css(bower_components) bower.css
    link(rel='stylesheet', href="../bower_components/jqueryui/themes/smoothness/jquery-ui.css")
    //endbuild

    //build:css application.css
    link(rel='stylesheet', href='vendor.css')
    link(rel='stylesheet', href='sprites.css')
    link(rel='stylesheet', href='app.css')
    //endbuild

  body

    .navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          a.navbar-brand(href="#/") lang
        .navbar-collapse.collapse
          ul.nav.navbar-nav

            li(ui-sref-active="active")
              a(ui-sref="login") Login
            li(ui-sref-active="active")
              a(ui-sref="register") Register
    .container
      .row(ui-view)

    //build:js(bower_components) modules.js
    script(type='text/javascript', src='lodash/dist/lodash.js')
    script(type='text/javascript', src='jquery/dist/jquery.js')
    script(type='text/javascript', src='bootstrap/dist/js/bootstrap.js')
    script(type='text/javascript', src='angular/angular.js')
    script(type='text/javascript', src='angular-cookies/angular-cookies.js')
    script(type='text/javascript', src='angular-resource/angular-resource.js')
    script(type='text/javascript', src='angular-sanitize/angular-sanitize.js')
    script(type='text/javascript', src='angular-translate/angular-translate.js')
    script(type='text/javascript', src='angular-translate-loader-static-files/angular-translate-loader-static-files.js')
    script(type='text/javascript', src='angular-ui-router/release/angular-ui-router.js')
    script(type='text/javascript', src='restangular/dist/restangular.js')

    script(type='text/javascript', src='jqueryui/jquery-ui.js')
    script(type='text/javascript', src='jqueryui-timepicker-addon/src/jquery-ui-timepicker-addon.js')
    script(type='text/javascript', src='d3/d3.js')
    //endbuild

    //build:js(.tmp) application.js
    script(type='text/javascript', src='vendor.js')
    script(type='text/javascript', src='app.js')
    script(type='text/javascript', src='templates.js')
    //endbuild