/*
  form styles
*/

.form-section
  background #fafafa
  padding 18px 72px
  margin-bottom 18px

.form-sectionHeading
  font-size 18px

.form-subSection,
.form-tabSection
  background #eaeaea
  padding 18px 72px
  margin-bottom 18px

.form-subSectionHeading,
.form-tabSectionHeading
  font-size 15px

.form-row
  margin 14px 0
  padding 0
  position relative

.form-label
  box-sizing border-box
  display flex
  align-items center
  justify-content left

.form-labeltext
  position relative
  width 110px
  box-sizing border-box
  white-space nowrap
  text-align right
  padding-right 15px
  color #333f4e
  flex 0 0 auto

.form-labeltextCheckbox,
.form-labeltextRadio
  text-align left
  padding-left 5px
  padding-right 20px
  cursor pointer

.form-element
  width 300px
  box-sizing border-box
  position relative

.form-requiredIndicator
  font-size 14px
  color #801a1a
  position absolute
  top -3px
  right 7px

.form-input
  width 100%
  padding 7px

select.form-inputSelect
  padding 7px
  background #fff

input.form-inputCheckbox
  margin 0
  vertical-align middle

  // align any following element in line with checkbox
  & + *
    vertical-align middle

input.form-inputRadio
  margin 0
  vertical-align middle

  // align any following element in line with checkbox
  & + *
    vertical-align middle

.form-validationErrors
  width 150px
  position absolute
  top 4px
  background #801a1a
  color #eee
  padding 5px 15px
  left 320px
  border-radius 5px

  ul,li
    list-style-type none

  &:before
    content " "
    position absolute
    top 7px
    left -6px
    width 0
    height 0
    border-top 6px solid transparent
    border-bottom 6px solid transparent
    border-right 6px solid #801a1a

.form-tabSectionNav
  padding 10px 0

.form-tabSectionNavTitle
  display inline-block
  padding 10px
  margin-right 18px
  background #dadada


.onoffswitch
  position relative
  width 83px
  overflow hidden
  user-select none
  display block
  height 37px

.onoffswitch-checkbox
  display none

.onoffswitch-label
  display block
  overflow hidden
  cursor pointer
  border 1px solid #999999
  border-radius 2px

.onoffswitch-inner
  display block
  width 200%
  margin-left -100%
  transition margin 0.2s ease-in 0s

.onoffswitch-inner:before,
.onoffswitch-inner:after
  float left
  width 50%
  height 35px
  padding 0
  line-height 35px
  font-size 13px
  color #fff
  box-sizing border-box

.onoffswitch-inner:before
  content: "Yes"
  padding-left 8px
  background-color #36B28F
  color #fff
  border 1px solid #36b28f
  box-shadow inset 10px 10px 10px -10px rgba(0,0,0,0.2)

.onoffswitch-inner:after
  content "No"
  padding-right 11px
  color #fff
  text-align right
  border 1px solid #802f26
  background-color #b24236
  box-shadow inset 10px 10px 10px -10px rgba(0,0,0,0.2)

.onoffswitch-inner.m-disabled:after
  border 1px solid #808080
  background-color #808080

.onoffswitch-switch
  width 42px
  margin 0px
  border-radius 2px
  absolute top 0 bottom 0 right 41px
  transition all 0.2s ease-in 0s
  border 1px solid #afb0b0
  background-image linear-gradient(#fefefe, #e5e5e5)
  box-shadow 0 0 1px

.onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-inner
  margin-left 0

.onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-switch
  right 0px

.onoffswitch-switch:before
  absolute top 0 left 0 bottom 0 right 0
  line-height 35px
  font-size 11px
  text-shadow -1px 0 0 #fff
  color #c0c1c1
  text-align center
  content "|||"


/* css for timepicker */
.ui-timepicker-div .ui-widget-header { margin-bottom: 8px; }
.ui-timepicker-div dl { text-align: left; }
.ui-timepicker-div dl dt { float: left; clear:left; padding: 0 0 0 5px; }
.ui-timepicker-div dl dd { margin: 0 10px 10px 45%; }
.ui-timepicker-div td { font-size: 90%; }
.ui-tpicker-grid-label { background: none; border: none; margin: 0; padding: 0; }

.ui-timepicker-rtl{ direction: rtl; }
.ui-timepicker-rtl dl { text-align: right; padding: 0 5px 0 0; }
.ui-timepicker-rtl dl dt{ float: right; clear: right; }
.ui-timepicker-rtl dl dd { margin: 0 45% 10px 10px; }